{
    "name": "drewlabs/envoyer-smtp",
    "description": "SMTP drivers for envoyer client library",
    "type": "library",
    "keywords": [
        "smtp",
        "envoyer"
    ],
    "require": {
        "php": ">=7.0",
        "drewlabs/envoyer-contracts": "^0.2.0",
        "psr/http-message": "^2.0",
        "symfony/mailer": "^6.0|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=6.0",
        "drewlabs/envoyer": "^0.2.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Drewlabs\\Envoyer\\Drivers\\Smtp\\": "src/"
        }
    },
    "authors": [
        {
            "name": "azandrew-sidoine",
            "email": "asmyns.platonnas29@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
